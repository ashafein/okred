{% extends "OkredBundle::layout.html.twig" %}
{% block title %}Регистрация {% endblock %}
{% block stylesheets %}
		<link href="css/reset.css" rel="stylesheet" media="screen">
		<link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
		<link href="css/fonts.css" rel="stylesheet" media="screen">
		<link href="css/registration.css" rel="stylesheet" media="screen">
{% endblock %}

{% block registration %}
	<div id="registration" class="container-fluid">
		<h1>Регистрация</h1>
		<a>уже есть аккаунт</a>
	</div>
{% endblock %}

{% block content %}
	<form id="reg-fields" class="container-fluid">
		<fieldset> 
		<div id="personal-info">
			<legend>Личная информация</legend>
				<label>Ваше имя</label>
				<div class="input-box">
					<div class="input">
						<input type="text" placeholder="…">
						<div class="check"></div>
					</div>
					<span class="alert alert-color1 enable">Красивое имя :)</span>
				</div>
				<label>Отчество</label>
				<div class="input-box">
					<div class="input">
						<input type="text" placeholder="…">
						<div class="check true"></div>
					</div>
				</div>
				
				<label>Фамилия</label>
				<div class="input-box">
					<div class="input">
						<input type="text" placeholder="…">
						<div class="check false"></div>
					</div>
					<span class="alert alert-color2 enable">Ну же, не стесняйтесь :)</span>
				</div>
				
				<div class="user-type clearfix">
					<span>Вы</span>
					<label class="radio">
						<input type="radio" name="type" value="employer">
						<span class="type">Соискатель</span>
						<span>(Ищите работу)</span>
					</label>
					<span>или</span>
					<label class="radio">
						<input type="radio" name="type" value="workman">
						<span class="type">Работодатель</span>
						<span>(Ищите сотрудника)</span>
					</label>
				</div>
		</div>
		<div id="contact-info">
			<legend>Контактная информация</legend>
			<label>Телефон</label>
			<div class="input-box">
				<div class="input">
					<input type="text" placeholder="…">
					<div class="check"></div>
				</div>
				<span class="help phone">В какое время Вам можно звонить?</span>
			</div>
			<label>Email</label>
			<div class="input-box">
				<div class="input">
					<input type="text" placeholder="…">
					<div class="check true"></div>
				</div>
				<span class="help notice">Сюда будут приходить уведомления</span>
			</div>
		</div>
		<div id="private-info">
			<legend>Секретная информация</legend>
			<label>Придумайте пароль</label>
			<div class="input-box">
				<div class="input">
					<input type="text" placeholder="…">
					<div class="check"></div>
				</div>
				<span class="alert alert-color3 enable">Слишком просто</span>
			</div>
			<label>и повторите его</label>
			<div class="input-box">
				<div class="input">
					<input type="text" placeholder="…">
					<div class="check true"></div>
				</div>
				<span class="alert alert-color1">Красивое имя :)</span>
			</div>
		</div>
		
		<div class="system-msg">
			
			<span><div class="ok"></div>ок, вроде все впорядке, теперь можно</span>
		</div>
		
		<button type="submit" class="btn">Создать учетную запись соискателя</button>
		</fieldset>
	</form>
{% endblock %}