{% trans_default_domain "OkredJobBundle" %}
{% block profile_header -%}
    <h2>{{ app.user.shortName }}</h2>
    <ul class="nav nav-tabs space-top-m">
        <li class="{{ tab == 'responses' ? 'active' : '' }}">
            <a href="{{ path('okred_job_userprofile_main') }}">{{ 'candidate.employer.messages._tab_name'|trans }}
                <span class="badge">{{ active_response_count }}</span></a>
        </li>
        <li class="{{ tab == 'resume' ? 'active' : '' }}">
            <a href="{{ path('okred_job_userprofile_resume') }}">{{ 'candidate.resume._tab_name'|trans }}
                <span class="badge">{{ resume_count }}</span></a>
        </li>
        <li class="{{ tab == 'profile' ? 'active' : '' }}">
            <a href="{{ path('okred_job_candidate_profile_view') }}">{{ 'candidate.profile._tab_name'|trans }}</a>
        </li>
        <li class="{{ tab == 'search_history' ? 'active' : '' }}">
            <a href="{{ path('okred_job_userprofile_search_history') }}">{{ 'candidate.search.history._tab_name'|trans }}</a>
        </li>
    </ul>
{%- endblock %}