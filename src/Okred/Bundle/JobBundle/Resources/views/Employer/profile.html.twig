{% extends "OkredJobBundle::layout.html.twig" %}
{% trans_default_domain "OkredJobBundle" %}
{% set tab = 'profile' %}
{% block page %}
    <div class="row">
        <div class="col-md-12">
            {% include "OkredJobBundle:Employer:_header.html.twig" %}
            <dl class="dl-horizontal">
                <dt>{{ 'user.profile.full_name'|trans }}</dt>
                <dd>{{ user.fullName|default('имя не указано') }}</dd>
                <dt>{{ 'user.profile.email'|trans }}</dt>
                <dd>{{ user.email }}</dd>
            </dl>
            <div>
                <a class="btn btn-default" href="{{ path('okred_job_employerprofile_edit') }}">{{ 'user.profile.edit'|trans }}</a>
                <a class="btn btn-default" href="#">{{ 'user.password.change'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}