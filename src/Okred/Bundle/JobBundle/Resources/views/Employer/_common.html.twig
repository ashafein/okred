        <li class="{{ tab == 'search_history' ? 'active' : '' }}">
            <a href="{{ path('okred_job_employerprofile_search_history') }}">История поиска</a>
        </li>
        <li class="{{ tab == 'profile' ? 'active' : '' }}">
