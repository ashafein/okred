{% extends "OkredJobBundle::layout.html.twig" %}
{% trans_default_domain "OkredJobBundle" %}
{% set tab = 'company' %}
{% block page %}
    <div class="row">
        <div class="col-md-12">
            {% include "OkredJobBundle:Employer:_header.html.twig" %}
            <dl class="dl-horizontal">
                <dt>{{ company.name|default('имя не указано') }}</dt>
                <dd>{{ company.phone }}</dd>
                <dd>{{ company.slogan }}</dd>
            </dl>
            <div>
                <a class="btn btn-default" href="#">Редактировать</a>
            </div>
        </div>
    </div>
{% endblock %}