{% extends "OkredJobBundle::layout_clean.html.twig" %}
{% trans_default_domain "FOSUserBundle" %}
{% block page %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="reg-header">
                <h1>Регистрация</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form role="form" method="POST" action="{{ path('fos_user_registration_register') }}">
                {{ form_widget(form._token) }}
                {% if form.vars.errors|length > 0 %}
                    <div class="reg-block">
                        {% for e in form.vars.errors %}
                            <div>{{ e.message }}</div>
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="reg-block">
                    <h4>{{ 'registration.field_group.account'|trans }}</h4>
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr':{'class':'form-control'} }) }}
                        <div>{{ form_errors(form.email) }}</div>
                    </div>
                    {% for field in form.plainPassword %}
                        <div class="form-group">
                            {{ form_label(field) }}
                            {{ form_widget(field, {'attr':{'class':'form-control'} }) }}
                            <div>{{ form_errors(field) }}</div>
                        </div>
                    {% endfor %}
                </div>
                <div class="reg-block">
                    <h4>{{ 'registration.field_group.person_info'|trans }}</h4>
                    <div class="form-group">
                        {{ form_label(form.lastname) }}
                        {{ form_widget(form.lastname, {'attr':{'class':'form-control'} }) }}
                        <div>{{ form_errors(form.lastname) }}</div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.firstname) }}
                        {{ form_widget(form.firstname, {'attr':{'class':'form-control'} }) }}
                        <div>{{ form_errors(form.firstname) }}</div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.middlename) }}
                        {{ form_widget(form.middlename, {'attr':{'class':'form-control'} }) }}
                        <div>{{ form_errors(form.middlename) }}</div>
                    </div>
                </div>
                <div class="reg-block">
                    <button type="submit"
                            class="btn btn-warning">{{ 'registration.do_register'|trans }}</button>
                    {{ 'registration.and_continue'|trans }}
                </div>
            </form>
        </div>
    </div>
{% endblock %}